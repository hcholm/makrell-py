
{test ">> operator"
    add2 = { + 2}
    mul3 = { * 3}
    sub = {-}
    add2mul3sub5 = add2 >> mul3 >> {sub _ 5}
    a = 5 | add2mul3sub5
    a | print
    {assert a == 16}
}

