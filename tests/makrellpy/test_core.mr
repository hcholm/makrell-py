{test "cond macro"
    a = {cond
        true 2
        false 3}
    a | print
    {assert a == 2}

    b = {cond
        false 2
        true 3}
    b | print
    {assert b == 3}

    c = {cond
        a < b  a
               b}
    c | print
    {assert c == 2}

    d = {cond
        a > b  a
               b}
    d | print
    {assert d == 3}

    e = {cond
        {do {global a} {global b} a=a*2 b=b*2 a > b}  a
        a < b  b
               0}
    e | print
    {assert e == 6}  # ?
}
